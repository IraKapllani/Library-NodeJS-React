            <li class="main-header__item">
                <a class="<%= path === '/books' ? 'active' : '' %>" href="/books">Books</a>
            </li>
            <% if (isAuthenticated) { %>
            <!-- <li class="main-header__item">
                <a class="<%= path === '/reservations' ? 'active' : '' %>" href="/reservations">Reservations</a>
            </li> -->
            <li class="main-header__item">
                <a class="<%= path === '/admin/add-books' ? 'active' : '' %>" href="/admin/add-books">Add Books
                </a>
            </li> <li class="main-header__item">
                <a class="<%= path === '/admin/add-categories' ? 'active' : '' %>" href="/admin/add-categories">Add Categories
                </a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/admin/add-authors' ? 'active' : '' %>" href="/admin/add-authors">Add Authors
